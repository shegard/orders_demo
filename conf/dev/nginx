upstream django-orders-demo {
    server unix:///var/www/orders_demo/uwsgi.sock;
}

server {
        listen 8100;
        server_name _;
        client_max_body_size 0;
        charset utf-8;

        location /static {
            alias /var/www/orders_demo/static_root/;
            add_header Access-Control-Allow-Origin *;
        }

        location /media {
            alias /var/www/orders_demo/media_root/;
        }

        location / {
          include uwsgi_params;
          uwsgi_pass unix:/var/www/orders_demo/uwsgi.sock;
        }
}
